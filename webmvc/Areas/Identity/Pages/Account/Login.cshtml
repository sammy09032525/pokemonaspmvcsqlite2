@page
@using Microsoft.Extensions.Options
@inject IOptions<Application> application
@model LoginModel

@{
    ViewData["Title"] = "Welcome to " + @application.Value.Name;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <section>
            <form id="account" method="post">
                <h3 class="text-center">Log in</h3>
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Username" class="form-control" id="floatingInput" autocomplete="username" aria-required="true"/>
                    <label for="floatingInput" asp-for="Input.Username">Username</label>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" id="floatingPassword" autocomplete="current-password" aria-required="true"/>
                    <label for="floatingPassword" asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-lg btn-primary">Log in</button>
                </div>
            </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
